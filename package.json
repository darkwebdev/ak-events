{
  "name": "ak-events",
  "version": "1.0.0",
  "description": "Website for Arknights events",
  "scripts": {
    "scrape": "node src/server/scrape.js",
    "emulate-action": "yarn scrape && (git diff --quiet public/data/events.json || echo 'public/data/events.json changed, would commit and push') && echo 'GitHub Action emulation complete'",
    "dev": "cd src/client && vite",
    "build": "cd src/client && vite build",
    "build:dist": "yarn build && echo Built to ./dist",
    "deploy:ci": "echo 'CI should publish ./dist to GitHub Pages'",
    "preview": "cd src/client && vite preview --port 5173",
    "start": "cd src/client && vite preview --port 5173",
    "stop": "echo 'To stop the server, press Ctrl+C in the terminal running the server'",
    "test": "jest --runInBand",
    "storybook": "storybook dev -p 6006 --no-open",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@floating-ui/react": "^0.27.16",
    "@number-flow/react": "^0.5.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@storybook/react-vite": "^9.1.13",
    "jest": "^29.6.1",
    "jsdom": "^22.1.0",
    "prop-types": "^15.8.1",
    "storybook": "^9.1.13",
    "vite": "^5.0.0"
  }
}
